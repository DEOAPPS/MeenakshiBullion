                <div class="wrap-login100">
                    <form action="/" method="post">
                        <input name="__RequestVerificationToken" type="hidden" value="" />
                        <form class="login100-form validate-form">
                            <span class="login100-form-logo">
                                <img src="../assets/layouts/layout5/img/parrotLeft.png" alt="">
                                <img src="../assets/layouts/layout5/img/login_logonew.png" alt="">
                                <img src="../assets/layouts/layout5/img/parrotRight.png" alt="">
                            </span>
                            <div class="wrap-input100 validate-input" data-validate="Enter Mobile Number">
                                @Html.EditorFor(model => model.ADMIN_MOBILENO, new { htmlAttributes = new { @class = "input100", placeholder = "Enter Mobile Number" } })
                                <span class="focus-input100" data-placeholder="&#xf207;"></span>
                                @Html.ValidationMessageFor(model => model.ADMIN_MOBILENO, "", new { @class = "text-danger" })

                            </div>

                            <div class="wrap-input100 validate-input" data-validate="Enter Password">
                                @Html.EditorFor(model => model.ADMIN_PASSWORD, new { htmlAttributes = new { @class = "input100", Type = "password", placeholder = "Enter Password" } })
                                <span class="focus-input100" data-placeholder="&#xf191;"></span>
                                @Html.ValidationMessageFor(model => model.ADMIN_PASSWORD, "", new { @class = "text-danger" })

                            </div>

                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    Remember me

                                    @Html.ActionLink("ForgotPassword", "update", "LoginController")

                                </label>
                            </div>

                            <div class="container-login100-form-btn">
